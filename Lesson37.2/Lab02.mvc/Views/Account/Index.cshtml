@{
    var accounts = ViewBag.accounts;
}
<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="@item.Avatar" alt="" style="width: 250px;height:250px"/>
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>
                        @item.Bio
                    </p>
                    <p>
                        <a asp-route="profile" asp-route-id="@item.Id" class="btn btn-success btn-block">Profile</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>