@model DevXuongMoc.Models.Contact

@{
    ViewData["Title"] = "Chỉnh sửa liên hệ";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">CHỈNH SỬA LIÊN HỆ</h1>
        <p class="lead text-secondary">Cập nhật thông tin liên hệ bên dưới để chỉnh sửa.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề liên hệ" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Nhập email liên hệ" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Nội dung</label>
                            <textarea asp-for="Content" class="form-control" rows="4" placeholder="Nhập nội dung liên hệ"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="1">Hoạt động</option>
                                <option value="0">Không hoạt động</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UpdatedDate" class="form-label fw-bold">Ngày cập nhật</label>
                            <input asp-for="UpdatedDate" type="date" class="form-control" />
                            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5 mt-3">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-5 mt-3">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
