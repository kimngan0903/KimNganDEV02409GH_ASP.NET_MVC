@model DevXuongMoc.Models.News

@{
    ViewData["Title"] = "Chỉnh sửa News";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-info">CHỈNH SỬA NEWS</h1>
        <p class="lead text-secondary">Vui lòng cập nhật thông tin bên dưới.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Slug" class="form-label fw-bold">Slug</label>
                                <input asp-for="Slug" class="form-control" placeholder="Nhập Slug" />
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Nội dung</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Nhập nội dung bài viết"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Image" class="form-label fw-bold">Hình ảnh</label>
                                <input asp-for="Image" class="form-control" placeholder="Nhập đường dẫn hình ảnh" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaTitle" class="form-label fw-bold">Meta Title</label>
                                <input asp-for="MetaTitle" class="form-control" placeholder="Nhập Meta Title" />
                                <span asp-validation-for="MetaTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hiển thị hình ảnh hiện tại nếu có -->
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Hình ảnh hiện tại</label>
                                <div class="text-center">
                                    <img src="@Model.Image" alt="@Model.Title" class="img-thumbnail" style="max-width: 150px;" />
                                </div>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaKeyword" class="form-label fw-bold">Meta Keyword</label>
                                <input asp-for="MetaKeyword" class="form-control" placeholder="Nhập Meta Keyword" />
                                <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaDescription" class="form-label fw-bold">Meta Description</label>
                                <textarea asp-for="MetaDescription" class="form-control" rows="3" placeholder="Nhập Meta Description"></textarea>
                                <span asp-validation-for="MetaDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                            <select asp-for="Status" class="form-select">
                                <option value="1">Hoạt động</option>
                                <option value="0">Không hoạt động</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}