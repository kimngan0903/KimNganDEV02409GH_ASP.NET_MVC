@model DevXuongMoc.Models.News

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-info">TẠO BÀI VIẾT MỚI</h1>
        <p class="lead text-secondary">Vui lòng điền thông tin bên dưới để tạo bài viết mới.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Row for two columns -->
                        <div class="row">
                            <!-- Column 1 -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Code" class="form-label fw-bold">Mã bài viết</label>
                                    <input asp-for="Code" class="form-control" placeholder="Nhập mã bài viết" />
                                    <span asp-validation-for="Code" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Title" class="form-label fw-bold">Tiêu đề bài viết</label>
                                    <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề bài viết" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                                    <input asp-for="Description" class="form-control" placeholder="Nhập mô tả bài viết" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Content" class="form-label fw-bold">Nội dung bài viết</label>
                                    <input asp-for="Content" class="form-control" placeholder="Nhập nội dung bài viết" />
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MetaTitle" class="form-label fw-bold">Meta Tiêu đề</label>
                                    <input asp-for="MetaTitle" class="form-control" placeholder="Nhập meta tiêu đề" />
                                    <span asp-validation-for="MetaTitle" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MainKeyword" class="form-label fw-bold">Từ khóa chính</label>
                                    <input asp-for="MainKeyword" class="form-control" placeholder="Nhập từ khóa chính" />
                                    <span asp-validation-for="MainKeyword" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Column 2 -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MetaKeyword" class="form-label fw-bold">Meta Từ khóa</label>
                                    <input asp-for="MetaKeyword" class="form-control" placeholder="Nhập meta từ khóa" />
                                    <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MetaDescription" class="form-label fw-bold">Meta Mô tả</label>
                                    <input asp-for="MetaDescription" class="form-control" placeholder="Nhập meta mô tả" />
                                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Slug" class="form-label fw-bold">Slug</label>
                                    <input asp-for="Slug" class="form-control" placeholder="Nhập slug" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Views" class="form-label fw-bold">Lượt xem</label>
                                    <input asp-for="Views" class="form-control" placeholder="Nhập số lượt xem" />
                                    <span asp-validation-for="Views" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Likes" class="form-label fw-bold">Lượt thích</label>
                                    <input asp-for="Likes" class="form-control" placeholder="Nhập số lượt thích" />
                                    <span asp-validation-for="Likes" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Star" class="form-label fw-bold">Sao đánh giá</label>
                                    <input asp-for="Star" class="form-control" placeholder="Nhập đánh giá sao" />
                                    <span asp-validation-for="Star" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="AdminCreated" class="form-label fw-bold">Admin tạo</label>
                                    <input asp-for="AdminCreated" class="form-control" placeholder="Nhập tên admin tạo" />
                                    <span asp-validation-for="AdminCreated" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="AdminUpdated" class="form-label fw-bold">Admin cập nhật</label>
                                    <input asp-for="AdminUpdated" class="form-control" placeholder="Nhập tên admin cập nhật" />
                                    <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Tạo bài viết</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
