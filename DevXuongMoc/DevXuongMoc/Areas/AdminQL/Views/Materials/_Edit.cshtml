@model DevXuongMoc.Models.Material

@{
    ViewData["Title"] = "Chỉnh sửa Material";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-8 text-info">CHỈNH SỬA MATERIAL</h2>
        <p class="lead text-secondary" style="font-size: 15px">Cập nhật thông tin material bên dưới để chỉnh sửa.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề material" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Icon" class="form-label fw-bold">Icon</label>
                                <input asp-for="Icon" class="form-control" placeholder="Nhập icon" />
                                <span asp-validation-for="Icon" class="text-danger"></span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Icon))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ảnh đại diện hiện tại</label>
                                <div class="text-center">
                                    <img src="@Model.Icon" alt="@Model.Title" class="img-thumbnail" style="max-width: 150px;" />
                                </div>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaTitle" class="form-label fw-bold">Meta Title</label>
                                <input asp-for="MetaTitle" class="form-control" placeholder="Nhập Meta Title" />
                                <span asp-validation-for="MetaTitle" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaKeyword" class="form-label fw-bold">Meta Keyword</label>
                                <input asp-for="MetaKeyword" class="form-control" placeholder="Nhập Meta Keyword" />
                                <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaDescription" class="form-label fw-bold">Meta Description</label>
                                <textarea asp-for="MetaDescription" class="form-control" rows="3" placeholder="Nhập Meta Description"></textarea>
                                <span asp-validation-for="MetaDescription" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Slug" class="form-label fw-bold">Slug</label>
                                <input asp-for="Slug" class="form-control" placeholder="Nhập Slug" />
                                <span asp-validation-for="Slug" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Orders" class="form-label fw-bold">Thứ tự</label>
                                <input asp-for="Orders" class="form-control" placeholder="Nhập thứ tự hiển thị" />
                                <span asp-validation-for="Orders" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Parentid" class="form-label fw-bold">Parent ID</label>
                                <input asp-for="Parentid" class="form-control" placeholder="Nhập Parent ID" />
                                <span asp-validation-for="Parentid" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="0">Hoạt động</option>
                                    <option value="1">Không hoạt động</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Notes" class="form-label fw-bold">Ghi chú</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Nhập ghi chú"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminCreated" class="form-label fw-bold">Admin tạo</label>
                                <input asp-for="AdminCreated" class="form-control" placeholder="Nhập tên admin tạo" />
                                <span asp-validation-for="AdminCreated" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminUpdated" class="form-label fw-bold">Admin cập nhật</label>
                                <input asp-for="AdminUpdated" class="form-control" placeholder="Nhập tên admin cập nhật" />
                                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
