@model DevXuongMoc.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-8 text-info">CHỈNH SỬA SẢN PHẨM</h2>
        <p class="lead text-secondary" style="font-size: 15px">Vui lòng cập nhật thông tin sản phẩm bên dưới.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Image" class="form-label fw-bold">Hình ảnh</label>
                                <input asp-for="Image" class="form-control" placeholder="Nhập URL hình ảnh" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                                <!-- Hiển thị ảnh hiện tại nếu có -->
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Ảnh đại diện hiện tại</label>
                                        <div class="text-center">
                                            <img src="@Model.Image" alt="Avatar hiện tại" class="img-thumbnail" style="max-width: 150px;" />
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Cid" class="form-label fw-bold">Danh mục</label>
                                <input asp-for="Cid" class="form-control" />
                                <span asp-validation-for="Cid" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Code" class="form-label fw-bold">Mã sản phẩm</label>
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="MetaTitle" class="form-label fw-bold">Meta Title</label>
                                <input asp-for="MetaTitle" class="form-control" />
                                <span asp-validation-for="MetaTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceOld" class="form-label fw-bold">Giá cũ</label>
                                <input asp-for="PriceOld" class="form-control" />
                                <span asp-validation-for="PriceOld" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceNew" class="form-label fw-bold">Giá mới</label>
                                <input asp-for="PriceNew" class="form-control" />
                                <span asp-validation-for="PriceNew" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Size" class="form-label fw-bold">Kích thước</label>
                                <input asp-for="Size" class="form-control" />
                                <span asp-validation-for="Size" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Views" class="form-label fw-bold">Lượt xem</label>
                                <input asp-for="Views" class="form-control" />
                                <span asp-validation-for="Views" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Likes" class="form-label fw-bold">Lượt thích</label>
                                <input asp-for="Likes" class="form-control" />
                                <span asp-validation-for="Likes" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Star" class="form-label fw-bold">Sao</label>
                                <input asp-for="Star" class="form-control" />
                                <span asp-validation-for="Star" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Home" class="form-label fw-bold">Hiển thị trang chủ</label>
                                <input asp-for="Home" class="form-control" />
                                <span asp-validation-for="Home" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Hot" class="form-label fw-bold">Sản phẩm hot</label>
                                <input asp-for="Hot" class="form-control" />
                                <span asp-validation-for="Hot" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CreatedDate" class="form-label fw-bold">Ngày tạo</label>
                                <input asp-for="CreatedDate" class="form-control" />
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdatedDate" class="form-label fw-bold">Ngày cập nhật</label>
                                <input asp-for="UpdatedDate" class="form-control" />
                                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminCreated" class="form-label fw-bold">Admin tạo</label>
                                <input asp-for="AdminCreated" class="form-control" />
                                <span asp-validation-for="AdminCreated" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminUpdated" class="form-label fw-bold">Admin cập nhật</label>
                                <input asp-for="AdminUpdated" class="form-control" />
                                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="0">Hoạt động</option>
                                    <option value="1">Không hoạt động</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Isdelete" class="form-label fw-bold">Xóa</label>
                                <input asp-for="Isdelete" class="form-control" />
                                <span asp-validation-for="Isdelete" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Lưu thay đổi</button>
                                <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}