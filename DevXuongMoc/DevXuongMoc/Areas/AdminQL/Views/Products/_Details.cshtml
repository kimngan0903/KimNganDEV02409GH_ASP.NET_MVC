@model DevXuongMoc.Models.Product

@{
    ViewData["Title"] = "CHI TIẾT SẢN PHẨM";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-8 text-info">CHI TIẾT SẢN PHẨM</h2>
        <p class="lead text-secondary" style="font-size: 13px">Dưới đây là thông tin chi tiết của sản phẩm.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Cid)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Cid)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Code)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Code)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.Raw(Model.Description)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Content)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.Raw(Model.Content)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Image)
                        </dt>
                        <dd class="col-sm-6">
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="@Model.Image" alt="Banner Image" class="img-fluid rounded" style="width: 100%; max-height: 300px; object-fit: cover;" />
                            }
                            else
                            {
                                <span>Không có ảnh</span>
                            }
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.MetaTitle)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.MetaTitle)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.MetaKeyword)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.MetaKeyword)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.MetaDescription)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.MetaDescription)
                        </dd>
                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Slug)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Slug)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.PriceOld)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.PriceOld)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.PriceNew)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.PriceNew)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Size)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Size)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Views)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Views)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Likes)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Likes)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Star)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Star)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Home)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Home)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Hot)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Hot)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.CreatedDate)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.UpdatedDate)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.UpdatedDate)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.AdminCreated)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.AdminCreated)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.AdminUpdated)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.AdminUpdated)
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-6">
                            @if (Model.Status == 0)
                            {
                                <span class="text-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="text-danger">Không hoạt động</span>
                            }
                        </dd>

                        <dt class="col-md-6 fw-bold">
                            @Html.DisplayNameFor(model => model.Isdelete)
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Isdelete)
                        </dd>
                    </dl>

                    <div class="text-center">
                        <button class="btn btn-warning  btn-lg px-4 mt-3 ajax-action" data-url="@Url.Action("Edit", new { id = Model.Id })">Chỉnh sửa</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".ajax-action").click(function (e) {
            e.preventDefault();

            // Get the URL from the data attribute
            var url = $(this).data("url");

            // Load the content into the .click div
            $(".click").load(url, function (response, status, xhr) {
                if (status == "error") {
                    alert("Error: " + xhr.status + " " + xhr.statusText);
                }
            });
        });
    });
</script>