@model DevXuongMoc.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-info">TẠO DANH MỤC</h1>
        <p class="lead text-secondary">Vui lòng điền thông tin bên dưới để tạo danh mục mới.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Row for two columns -->
                        <div class="row">
                            <!-- Column 1 -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                                    <input asp-for="Title" class="form-control" placeholder="Nhập tên danh mục" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Icon" class="form-label fw-bold">Biểu tượng</label>
                                    <input asp-for="Icon" type="file" class="form-control" />
                                    <span asp-validation-for="Icon" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MateTitle" class="form-label fw-bold">Tiêu đề Meta</label>
                                    <input asp-for="MateTitle" class="form-control" placeholder="Nhập tiêu đề meta" />
                                    <span asp-validation-for="MateTitle" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Slug" class="form-label fw-bold">Slug</label>
                                    <input asp-for="Slug" class="form-control" placeholder="Nhập slug" />
                                    <span asp-validation-for="Slug" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="AdminCreated" class="form-label fw-bold">Admin tạo</label>
                                    <input asp-for="AdminCreated" class="form-control" placeholder="Nhập tên admin tạo" />
                                    <span asp-validation-for="AdminCreated" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Column 2 -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MetaKeyword" class="form-label fw-bold">Từ khóa Meta</label>
                                    <input asp-for="MetaKeyword" class="form-control" placeholder="Nhập từ khóa meta" />
                                    <span asp-validation-for="MetaKeyword" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="MetaDescription" class="form-label fw-bold">Mô tả Meta</label>
                                    <input asp-for="MetaDescription" class="form-control" placeholder="Nhập mô tả meta" />
                                    <span asp-validation-for="MetaDescription" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Orders" class="form-label fw-bold">Thứ tự</label>
                                    <input asp-for="Orders" class="form-control" placeholder="Nhập thứ tự danh mục" />
                                    <span asp-validation-for="Orders" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Parentid" class="form-label fw-bold">ID Cha</label>
                                    <input asp-for="Parentid" class="form-control" placeholder="Nhập ID cha" />
                                    <span asp-validation-for="Parentid" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="AdminUpdated" class="form-label fw-bold">Admin cập nhật</label>
                                    <input asp-for="AdminUpdated" class="form-control" placeholder="Nhập tên admin cập nhật" />
                                    <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Notes" class="form-label fw-bold">Ghi chú</label>
                                    <input asp-for="Notes" class="form-control" placeholder="Nhập ghi chú" />
                                    <span asp-validation-for="Notes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Tạo danh mục</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
