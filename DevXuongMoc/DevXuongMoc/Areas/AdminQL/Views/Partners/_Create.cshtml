@model DevXuongMoc.Models.Partner

@{
    ViewData["Title"] = "Tạo đối tác";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-8 text-info">TẠO ĐỐI TÁC MỚI</h2>
        <p class="lead text-secondary" style="font-size: 13px">Vui lòng điền thông tin bên dưới để tạo đối tác mới.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Tên đối tác</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tên đối tác" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Url" class="form-label fw-bold">URL</label>
                                <input asp-for="Url" class="form-control" placeholder="Nhập URL đối tác" />
                                <span asp-validation-for="Url" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminCreated" class="form-label fw-bold">Admin tạo</label>
                                <input asp-for="AdminCreated" class="form-control" placeholder="Nhập tên admin tạo" />
                                <span asp-validation-for="AdminCreated" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminUpdated" class="form-label fw-bold">Admin cập nhật</label>
                                <input asp-for="AdminUpdated" class="form-control" placeholder="Nhập tên admin cập nhật" />
                                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Content" class="form-label fw-bold">Nội dung</label>
                                <input asp-for="Content" class="form-control" placeholder="Nhập nội dung đối tác" />
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CreatedDate" class="form-label fw-bold">Ngày tạo</label>
                                <input asp-for="CreatedDate" type="date" class="form-control" />
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdatedDate" class="form-label fw-bold">Ngày cập nhật</label>
                                <input asp-for="UpdatedDate" type="date" class="form-control" />
                                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="0">Hoạt động</option>
                                    <option value="1">Không hoạt động</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Isdelete" class="form-check-label">
                                    <input asp-for="Isdelete" class="form-check-input" />
                                    @Html.DisplayNameFor(model => model.Isdelete)
                                </label>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info btn-lg px-4 mt-3">Tạo đối tác</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
