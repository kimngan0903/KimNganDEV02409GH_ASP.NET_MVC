@model DevXuongMoc.Models.Partner

@{
    ViewData["Title"] = "Chỉnh sửa Partner";
    Layout = "~/Areas/AdminQL/Views/Shared/Admin.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-info">CHỈNH SỬA PARTNER</h1>
        <p class="lead text-secondary">Vui lòng cập nhật thông tin đối tác bên dưới.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Title" class="form-label fw-bold">Tiêu đề</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề đối tác" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Logo" class="form-label fw-bold">Logo</label>
                                <input asp-for="Logo" class="form-control" placeholder="Nhập đường dẫn logo" />
                                <span asp-validation-for="Logo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Orders" class="form-label fw-bold">Thứ tự</label>
                                <input asp-for="Orders" class="form-control" placeholder="Nhập thứ tự đối tác" />
                                <span asp-validation-for="Orders" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Hiển thị logo hiện tại nếu có -->
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Logo hiện tại</label>
                                <div class="text-center">
                                    <img src="@Model.Logo" alt="@Model.Title" class="img-thumbnail" style="max-width: 150px;" />
                                </div>
                            </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Content" class="form-label fw-bold">Nội dung</label>
                                <textarea asp-for="Content" class="form-control" rows="3" placeholder="Nhập nội dung đối tác"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label fw-bold">Trạng thái</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="1">Hoạt động</option>
                                    <option value="0">Không hoạt động</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CreatedDate" class="form-label fw-bold">Ngày tạo</label>
                                <input asp-for="CreatedDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdatedDate" class="form-label fw-bold">Ngày cập nhật</label>
                                <input asp-for="UpdatedDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminCreated" class="form-label fw-bold">Admin tạo</label>
                                <input asp-for="AdminCreated" class="form-control" placeholder="Nhập tên admin tạo" />
                                <span asp-validation-for="AdminCreated" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="AdminUpdated" class="form-label fw-bold">Admin cập nhật</label>
                                <input asp-for="AdminUpdated" class="form-control" placeholder="Nhập tên admin cập nhật" />
                                <span asp-validation-for="AdminUpdated" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg px-4 mt-3">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
