@model DevXuongMoc.Models.AdminUser

@{
    ViewData["Title"] = "Chi tiết tài khoản quản trị";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-8 text-info">CHI TIẾT TÀI KHOẢN</h2>
        <p class="lead text-secondary" style="font-size: 13px">Dưới đây là thông tin chi tiết của tài khoản quản trị.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-md-6 fw-bold">Tài khoản</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.Account)</dd>

                        <dt class="col-md-6 fw-bold">Mật khẩu</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.Password)</dd>

                        <dt class="col-md-6 fw-bold">Họ và tên</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-md-6 fw-bold">Số điện thoại</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-md-6 fw-bold">Email</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-md-6 fw-bold">Ảnh đại diện</dt>
                        <dd class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.Avatar))
                            {
                                <img src="@Model.Avatar" alt="@Model.Name" class="img-thumbnail" style="max-height: 100px;" />
                            }
                            else
                            {
                                <span>Không có ảnh</span>
                            }
                        </dd>

                        <dt class="col-md-6 fw-bold">ID Phòng ban</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.IdPhongBan)</dd>

                        <dt class="col-md-6 fw-bold">Ngày tạo</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.NgayTao)</dd>

                        <dt class="col-md-6 fw-bold">Người tạo</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.NguoiTao)</dd>

                        <dt class="col-md-6 fw-bold">Ngày cập nhật</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.NgayCapNhat)</dd>

                        <dt class="col-md-6 fw-bold">Người cập nhật</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.NguoiCapNhat)</dd>

                        <dt class="col-md-6 fw-bold">Quyền quản trị</dt>
                        <dd class="col-md-6">
                            @Html.DisplayFor(model => model.IsAdmin)

                        </dd>

                        <dt class="col-md-6 fw-bold">Trạng thái</dt>
                        <dd class="col-md-6">
                            @if (Model.TrangThai == 0)
                            {
                                <span class="text-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="text-danger">Không hoạt động</span>
                            }
                        </dd>

                        <dt class="col-md-6 fw-bold">Đã xóa</dt>
                        <dd class="col-md-6">
                            @Html.DisplayFor(model => model.IsDelete)

                        </dd>
                    </dl>

                    <div class="text-center">
                        <button class="btn btn-warning  btn-lg px-4 mt-3 ajax-action" data-url="@Url.Action("Edit", new { id = Model.Id })">Chỉnh sửa</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 mt-3">Quay lại</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".ajax-action").click(function (e) {
            e.preventDefault();

            // Get the URL from the data attribute
            var url = $(this).data("url");

            // Load the content into the .click div
            $(".click").load(url, function (response, status, xhr) {
                if (status == "error") {
                    alert("Error: " + xhr.status + " " + xhr.statusText);
                }
            });
        });
    });
</script>