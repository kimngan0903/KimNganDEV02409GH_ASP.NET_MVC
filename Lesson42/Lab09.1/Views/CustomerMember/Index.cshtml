@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Login Infomation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    form {
        border: 1px solid #ccc;
        border-radius: 5px;
        background: #ccc;
        padding: 1rem;
    }
</style>
@{
    if (HttpContextAccessor.HttpContext.Session.GetString("Member") != null)
    {
        <div class="row">
            <h2 class="text-center my02 py-2">Welcome to</h2>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center my-2 py-2">LOGIN INFORMATION</h2>
                <form asp-action="Login" asp-controller="CustomerMember" method="post">
                    <div class="mb-3">
                        <lable for="UserOrEmail" class="form-lable">Email/UserName</lable>
                        <input type="text" class="form-control" id="UserOrEmail" name="UserOrEmail" placeholder="name@example.com / username" value="ngan36758@gmail.com" />
                    </div>
                    <div class="mb-3">
                        <lable for="password" class="form-lable">Password</lable>
                        <input type="password" class="form-control" id="password" value="123456" />
                    </div>
                    <input type="hidden" name="urlAction" value="@ViewBag.UrlAction" />
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                    <span style="color:red">@TempData["errorLogin"]</span>
                </form>
            </div>
            <div class="col-md-6">
                <h2 class="text-center my-2 py-2">REGISTER INFORMATION</h2>
                <form asp-action="Register" asp-controller="CustomerMember" method="post">
                    <div class="mb-3">
                        <lable for="Name" class="form-lable">Name</lable>
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="FullName...." />
                    </div>
                    <div class="mb-3">
                        <lable for="USERNAME" class="form-lable">UserName</lable>
                        <input type="text" class="form-control" id="USERNAME" name="USERNAME" placeholder="UserName...." />
                    </div>
                    <div class="mb-3">
                        <lable for="EMAIL" class="form-lable">Email</lable>
                        <input type="email" class="form-control" id="EMAIL" name="EMAIL" placeholder="name@example.com" />
                    </div>
                    <div class="mb-3">
                        <lable for="PASSWORD" class="form-lable">Password</lable>
                        <input type="password" class="form-control" id="PASSWORD" name="PASSWORD" />
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Register</button>
                    <span style="color:red">@TempData["errorRegister"]</span>
                </form>
            </div>
        </div>
    }
}
